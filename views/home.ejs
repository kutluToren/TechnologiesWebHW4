<!DOCTYPE html>
<html lang="en">
  <head>
      <% include partials/head %>
  </head>
  <style>
        body { 
         background-color: #73a9f4;
         color: #444;
       }
    </style>

  <body class="container">
        <div class="col-md-10 col-md-offset-3">
        <h1>Home Page</h1>
        <p>Please press the button to go into that page</p>
        <button class="btn btn-success" id="login-link">
            Login
        </button>
        <button class="btn btn-success" id="signup-link">
            Signup
        </button>

    </div>
  </body>
  
  <script>
    

    $('#login-link').click((e) => {
    e.preventDefault();
    window.history.pushState("", "", '/login');
    window.location.reload();
    })

    $('#signup-link').click((e) => {
    e.preventDefault();
    window.history.pushState("", "", '/signup');
    window.location.reload();
    })


  </script>
</html>
