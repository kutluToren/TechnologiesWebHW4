<!DOCTYPE html>
<html lang="en">

<head>
    <% include partials/head %>
</head>

<body>
  <div class="text-center">
        <form action="/signup" method="post">
            <h1 class="form-signin-heading">Please signup with your credentials</h1>
            <br>
            <hr/>
            <br>
            <div class="form-group">
              <h4><label for="form_username">Username: </label>
              <input id="form_username" required type="text" name="username" />
            </h4>
            </div>
            <div class="form-group">
              <h4><label for="form_email">Email: </label>
              <input id="form_email" required type="email" name="email" />
            </h4>
            </div>
            <div class="form-group">
              <h4>
              <label for="form_password">Password: </label>
              <input id="form_password" required type="password" name="password" />
              </h4>
            </div>
            <!-- <button class="btn btn-primary btn-block" id="connect" type="submit" value="Submit">Connect</button> -->
            <br>
            <div>
              <button type="button" class="btn btn-success btn-lg" id="connect">Create Account</button>
            </div>
            <br>
            <hr/>
            <br>
          <button class="btn btn-primary btn-lg" type="submit" href="/login" onClick='document.location.href="/login"'>
            Return to login
          </button>
        </form>
        <!-- <button class="btn btn-success btn-block" type="submit" href="/signup" onClick='document.location.href="/signup"'>
      Create an account
    </button> -->
    </div>

  </div>
</body>

